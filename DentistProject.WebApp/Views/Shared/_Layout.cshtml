                                                    {
                                                        foreach (var item in dentists.Values)
                                                        {
                                                            <option value="@item.Id" class="bg-info">@item.User.FullName</option>
                                                        }
                                                    }
                                                </select>
                                            </div>
                                        </div>
                                    </div>
