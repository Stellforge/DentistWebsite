@using DentistProject.WebApp.Enums
@model GenericLoadMoreDto<PatientListDto>
@{
    ViewData["Title"] = "Users";
    Layout = "~/Views/Shared/_DoktorRandevuLayout.cshtml";
}

<div class="content-page">
    <div class="container-fluid container">
        <div class="row">
            <div class="col-lg-12">
                <div class="card card-block card-stretch card-height">
                    <div class="card-header d-flex justify-content-between">
                        <div class="iq-header-title">
                            <h4 class="card-title mb-0">Hasta Listesi</h4>
                        </div>
                        <a href="/AddPatient/" class="btn btn-primary">Ekle</a> @* data-toggle="modal" data-target="#addContact" *@
                    </div>
                    <div class="card-body">
                        <div class="table-responsive data-table">
                            <table class="data-tables table" style="width:100%">
                                <thead>
                                    <tr>
                                        <th>Profil</th>
                                        <th>İsim</th>
                                        <th>Email</th>
                                        <th>Telefon no.</th>
                                        <th>Durum</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if ((Model?.Values?.Count??0) > 0)
                                    {
                                        for (int i = 0; i < Model.Values.Count; i++)
                                        {
                                            var item = Model.Values[i];
                                            <tr>
                                                <td>
                                                    <img src="/Media/@((int)EMediaKey.Person)" class="rounded avatar-40 img-fluid" alt="">
                                                </td>
                                                <td>@item.User.FullName</td>
                                                <td>@item.User.Email</td>
                                                <td>@item.User.Phone</td>
                                                <td>
                                                    <div class="d-flex align-items-center list-action">
                                                       
                                                        <div class="badge bg-primary-light" data-toggle="tooltip" data-placement="top" title="" data-original-title="Action">
                                                            <div class="dropdown">
                                                                <div class="text-primary dropdown-toggle action-item" id="moreOptions1" data-toggle="dropdown" aria-haspopup="true" role="button"
                                                                aria-expanded="false">
                                                                </div>
                                                                <div class="dropdown-menu" aria-labelledby="moreOptions1">
                                                                        @if (ViewBag.CanUpdate==true)
                                                                        {
                                                                        <a class="dropdown-item" href="/PatientUpdate/@item.Id">Düzenle</a>
                                                                    }
                                                                        @if (ViewBag.CanDelete==true)
                                                                        {
                                                                        <a class="dropdown-item" href="/PatientDelete/@item.Id">Sil</a>
                                                                        }
                                                                       
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </td>
                                            </tr>
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

