@using DentistProject.Entities.Enum

@{
    Layout = null;
}
@model UserDto

<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta placeholder="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Randevu Sistemi</title>

    <!-- Favicon -->
    <link rel="shortcut icon" href="~/images/favicon.ico" />

    <link rel="stylesheet" href="~/css/backend-plugin.min.css">
    <link rel="stylesheet" href="~/css/backend.css?v=1.0.1">
    <link rel="stylesheet" href="~/vendor/@@fortawesome/fontawesome-free/css/all.min.css">
    <link rel="stylesheet" href="~/vendor/line-awesome/dist/line-awesome/css/line-awesome.min.css">
    <link rel="stylesheet" href="~/vendor/remixicon/fonts/remixicon.css">
</head>
<body class=" ">
    <!-- loader Start -->
    <div id="loading">
        <div id="loading-center">
        </div>
    </div>
    <!-- loader END -->

    <div class="wrapper">
        <section class="login-content">
            <div class="container h-100">
                <div class="row justify-content-center align-items-center height-self-center">
                    <div class="col-md-5 col-sm-12 col-12 align-self-center">
                        <div class="card">
                            <div class="card-body text-center">
                                <h2>Sign Up</h2>
                                <p>Create your Gdrive account.</p>
                                <form method="post">
                                    <div class="row">
                                        <div class="col-lg-6">
                                            <div class="floating-input form-group">
                                                <input class="form-control" asp-for="Name" type="text" placeholder="" id="name" required />
                                                <label class="form-label" for="name">İsim</label>
                                            </div>
                                        </div>
                                        <div class="col-lg-6">
                                            <div class="floating-input form-group">
                                                <input class="form-control" asp-for="Surname" type="text" placeholder="" id="lastname" required />
                                                <label class="form-label" for="lastname">Soyisim</label>
                                            </div>
                                        </div>
                                        <div class="col-lg-12">
                                            <div class="floating-input form-group">
                                                <input class="form-control" asp-for="Email" type="text" placeholder="" id="email" required />
                                                <label class="form-label" for="email">Email</label>
                                            </div>
                                        </div>
                                        <div class="col-lg-12">
                                            <div class="floating-input form-group">
                                                <input class="form-control" asp-for="Phone" type="text" placeholder="" id="phone" required />
                                                <label class="form-label" for="email">Phone</label>
                                            </div>
                                        </div>
                                        <div class="col-lg-12">
                                            <div class="floating-input form-group">
                                                <select class="form-control" asp-for="Gender"id="gender" required>
                                                    <option value="@((int)EGender.Male)">Erkek</option>
                                                    <option value="@((int)EGender.Female)">Kadın</option>
                                                </select>
                                                <label class="form-label" for="email">Cinsiyet</label>
                                            </div>
                                        </div>

                                        <div class="col-lg-6">
                                            <div class="floating-input form-group">
                                                <input class="form-control" asp-for="Password" type="password" placeholder="" id="password" required />
                                                <label class="form-label" for="password">Şifre</label>
                                            </div>
                                        </div>
                                        <div class="col-lg-6">
                                            <div class="floating-input form-group">
                                                <input class="form-control" asp-for="ConfirmPassword" type="password" placeholder="" id="password1" required />
                                                <label class="form-label" for="password1">Şifreyi onayla </label>
                                            </div>
                                        </div>
                                        <div class="col-lg-12">
                                            <div class="custom-control custom-checkbox mb-3 text-left">
                                                <input type="checkbox" required class="custom-control-input" id="customCheck1">
                                                <label class="custom-control-label" for="customCheck1">Kullanım koşullarını kabul ediyorum</label>
                                            </div>
                                        </div>
                                    </div>
                                    <button type="submit" class="btn btn-primary">Kayıt ol</button>
                                    <p class="mt-3">
                                        Zaten Bir Hesabım Var <a href="/Account/" class="text-primary">Giriş yap</a>
                                    </p>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>

    <!-- Backend Bundle JavaScript -->
    <script src="~/js/backend-bundle.min.js"></script>

    <!-- Chart Custom JavaScript -->
    <script src="~/js/customizer.js"></script>


    <!-- app JavaScript -->
    <script src="~/js/app.js"></script>
</body>
</html>